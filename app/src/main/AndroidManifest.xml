<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.controleite">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name="br.com.controleite.RedefineEmailActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.EmailVerificationActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.ProfileActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.ReportActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.ProductionFormActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.ProductionListActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.AnimalDetailsActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.AnimalsListActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.HomeActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.SignUpActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.LoginActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="br.com.controleite.SplashScreenActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.controleite.AnimalFormActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>